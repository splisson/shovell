<%= error_messages_for 'story' %>
<% form_for :story do |f| %>
  <p>
    name:<br />
    <%= f.text_field :name %>
  </p>
  <p>
    link:<br />
    <%= f.text_field :link %>
  </p>
  <p>
    description:<br />
    <%= f.text_area :description %>
  </p>
  <p>
    Tags:<br />
    <%= text_field_tag 'tags', params[:tags] %>
  </p>
  <p><%= submit_tag %></p>
<% end %>